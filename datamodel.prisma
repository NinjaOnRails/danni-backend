type Video {
  id: ID! @id
  youtubeId: String! @unique
  title: String!
  channelTitle: String!
  defaultLanguage: String
  thumbnailUrl: String!
  audio: [Audio]! @relation(name: "AudioToVideo")
  caption: [Caption]! @relation(name: "CaptionToVideo")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Audio {
  id: ID! @id
  source: String! @unique
  language: Language
  video: Video @relation(name: "AudioToVideo")
  caption: Caption @relation(name: "AudioToCaption")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Caption {
  id: ID! @id
  languageTag: String!
  xml: String!
  author: [String]! @scalarList(strategy: RELATION)
  video: Video @relation(name: "CaptionToVideo")
  audio: [Audio]! @relation(name: "AudioToCaption")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum Language {
  ENGLISH
  CZECH
  VIETNAMESE
  GERMAN
  SPANISH
  MANDARIN
  FRENCH
  ITALIAN
  PORTUGUESE
  RUSSIAN
  JAPANESE
  KOREAN
  HINDI
  ARABIC
  TELUGU
  TURKISH
  POLISH
  SWEDISH
  DUTCH
}
